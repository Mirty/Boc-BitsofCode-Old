<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#E6EE9C">

    <Button
        android:text="STRING"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/stringhe"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stringbutton"
        android:textSize="37dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/interi" />

    <Button
        android:text="BOOL"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/booleani"
        android:background="@drawable/boolbutton"
        android:textSize="37dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="0dp"
        android:layout_alignBaseline="@+id/stringhe"
        android:layout_alignBottom="@+id/stringhe"
        android:layout_alignStart="@+id/decimali" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:id="@+id/quesito"
        android:textSize="45dp"
        android:textColor="#3F51B5"
        android:layout_above="@+id/interi"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Seleziona il tipo corretto della seguente dichiarazione"
        android:textAlignment="center"
        android:textSize="30dp"
        android:id="@+id/consegnaliv2medio"
        android:textColor="#6A1B9A"
        android:paddingTop="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="FLOAT"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/decimali"
        android:background="@drawable/floatbutton"
        android:textSize="37dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="14dp"
        android:layout_above="@+id/booleani"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="INT"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/interi"
        android:background="@drawable/intbutton"
        android:textSize="37dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="14dp"
        android:layout_alignBaseline="@+id/decimali"
        android:layout_alignBottom="@+id/decimali"
        android:layout_alignParentStart="true" />


</RelativeLayout>