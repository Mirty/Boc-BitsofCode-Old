<?xml version="1.0" encoding="UTF-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#00838F"/>
                <!-- alttan gölge -->
                <corners android:radius="19dp"/>
            </shape>
        </item>
        <!-- BUTTON alttan gölge
          android:right="5px" to make it round-->
        <item
            android:bottom="5px"
            >
            <shape>
                <padding android:bottom="5dp"/>
                <solid android:color="#00BCD4"/>
                <corners
                    android:radius="19dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="5dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#006064"/>
                <corners android:radius="19dp"/>

            </shape>
        </item>
        <!-- BUTTON -->
        <item android:bottom="5px">
            <shape>
                <padding android:bottom="5dp"/>
                <gradient
                    android:startColor="#0097A7"
                    android:endColor="#00838F"
                    android:angle="270" />
                <corners
                    android:radius="19dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="5dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
</item>
    <item android:state_enabled="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#006064"/>
                    <corners android:radius="19dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#B2EBF2"
                        android:endColor="#B2EBF2"
                        android:angle="270" />
                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>