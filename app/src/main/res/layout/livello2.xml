<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE775">


    <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:src="@drawable/parlarobot"
            android:id="@+id/parlarobot"
            android:layout_below="@id/parlarobot"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


    <TextView
        android:text=""
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:id="@+id/testoFun"
        android:textAlignment="textStart"
        android:textSize="23dp"
        android:textColor="#3F51B5"
        android:background="@drawable/parlatextview"
        android:padding="10dp"
        android:maxLines="10"
        android:lineSpacingExtra="4dp"
        android:scrollbars="vertical"
        android:layout_above="@+id/parlarobot"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Parla"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/parla"
        android:background="@drawable/parlabutton"
        android:textColor="#EEFF41"
        android:textSize="30dp"
        android:fontFamily=""
        android:layout_marginTop="36dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/testoFun"
        android:layout_alignStart="@+id/testoFun" />


</RelativeLayout>
