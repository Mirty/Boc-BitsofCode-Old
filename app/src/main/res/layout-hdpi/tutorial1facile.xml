<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sfondo"
    android:background="#F9F2E7"
    tools:context="com.example.andrea.boc_bitsofcode.Tutorial1facile"
    android:padding="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/descrizione"
            android:textColor="#00838F"
            android:text="Tipi di dato"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />
    </ScrollView>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="">

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="avanti"
            android:textSize="40dp"
            android:id="@+id/tipo"
            android:background="@drawable/intbutton"
            android:textColor="#fff"/>

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="INT"
            android:textSize="40dp"
            android:id="@+id/intbutton"
            android:background="@drawable/intbutton"
            android:textColor="#fff"/>

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="FLOAT"
            android:textSize="40dp"
            android:id="@+id/floatbutton"
            android:background="@drawable/floatbutton"
            android:textColor="#fff"/>

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="STRING"
            android:textSize="40dp"
            android:id="@+id/stringbutton"
            android:background="@drawable/stringbutton"
            android:textColor="#fff"/>

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="BOOL"
            android:textSize="40dp"
            android:id="@+id/boolbutton"
            android:background="@drawable/boolbutton"
            android:textColor="#fff"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="40dp"
            android:id="@+id/indietro"
            android:background="@drawable/freccia_indietro" />
        <Space
            android:layout_width="180dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="40dp"
            android:id="@+id/avanti"
            android:background="@drawable/freccia_avanti" />
    </LinearLayout>

</LinearLayout>


