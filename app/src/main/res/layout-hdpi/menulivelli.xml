<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#F9F2E7"
    android:padding="15dp">


    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/intbutton"
        android:textColor="#FFFF"
        android:text="Livello 2"
        android:textSize="40dp"
        android:id="@+id/due"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stringbutton"
        android:textColor="#FFFF"
        android:text="Livello 1"
        android:textSize="40dp"
        android:id="@+id/uno"
        android:layout_above="@+id/due"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="11dp"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/floatbutton"
        android:textColor="#FFFF"
        android:text="Livello 3"
        android:textSize="40dp"
        android:id="@+id/tre"
        android:layout_below="@+id/due"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boolbutton"
        android:textColor="#FFFF"
        android:text="Livello 4"
        android:textSize="40dp"
        android:id="@+id/quattro"
        android:layout_below="@+id/tre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scegli il livello"
        android:textSize="25dp"
        android:textColor="#006064"
        android:textAlignment="center"
        android:id="@+id/menu"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/parlatextview"
        android:text="I tuoi punteggi"
        android:id="@+id/punteggi"
        android:layout_marginLeft="45dp"
        android:layout_above="@+id/uno"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="#006064"
        android:textSize="20dp"/>


</RelativeLayout>