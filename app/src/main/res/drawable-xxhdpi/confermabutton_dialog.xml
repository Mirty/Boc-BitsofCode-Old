<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="#AB47BC"/>
                </shape>
            </item>

            <item android:bottom="7px"
                android:right="5px">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#BA68C8"/>
                    <stroke android:color="#AB47BC" android:width="1px"/>
                </shape>

            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="#6A1B9A"/>
                </shape>
            </item>
            <item android:bottom="7px"
                android:right="5px">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#7B1FA2"/>
                    <stroke android:color="#6A1B9A" android:width="1px"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>